		{
			"name": "ConsEstat",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"    });\r",
							"\r",
							"pm.test(\"Todas las mascotas tienen el estado solicitado\", function () {\r",
							"    let body = pm.response.json();\r",
							"    let estadoSolicitado = pm.request.url.query.get(\"status\");\r",
							"\r",
							"    body.forEach(pet => {\r",
							"        pm.expect(pet.status).to.eql(estadoSolicitado);\r",
							"    });\r",
							"});\r",
							"\r",
							"\r",
							"pm.test(\"Existe la mascota modificada\", function () {\r",
							"    let body = pm.response.json();\r",
							"    let existe = body.some(pet => pet.id === 12 && pet.name === \"junior\");\r",
							"    pm.expect(existe).to.be.true;\r",
							"});\r",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"let estado = pm.environment.get(\"estado\");\r",
							"\r",
							"if (!estado || estado === \"\" || estado === \"undefined\") {\r",
							"    pm.environment.set(\"estado\", \"sold\");\r",
							"}"
						],
